<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<main>
  <div class="container text-center">
    <div class="row">
      <div class="col">
      </div>
      <div class="col-6 welcome-message">
        <h1>Welcome, <%= username %></h1><!--EJS reference to Usernames-->
        <br>
        <br>
        <br>
        <br>

        <!-- Card One: Exercise History-->
        <div class="card dashboard-card" style="width: 18rem;"> 
          <img 
          src="https://i.ytimg.com/vi/W23xfdEqHtg/maxresdefault.jpg" class="card-img-top" alt="..."
          alt="Logo"
          width="30px"
          />
          <div class="card-body">
            <h5 class="card-title">Exercise History</h5>
            <div class="dropdown">
              <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">Select a body part
              <span class="caret"></span></button>
              <ul class="dropdown-menu">

                <!-- CHEST BUTTON MODAL -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ChestModal">
                    Chest</a></li>
                <!-- BACK BUTTON MODAL -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#BackModal">
                    Back</a></li>
                <!-- ARMS BUTTON MODAL-->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ArmsModal">
                    Arms</a></li> 
                <!-- ARMS BUTTON MODAL -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ShouldersModal">
                    Shoulders</a></li>
                <!-- LEGS BUTTON MODAL -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#LegsModal">
                    Legs</a></li>
                
              </ul>
            </div>
          </div>
        </div>

        <!-- Spacing -->
        <br>
        <br>

        <!-- Chest Modal -->
        <div class="modal fade" id="ChestModal" tabindex="-1" role="dialog" aria-labelledby="#ChestModalTitle" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title modal-text" id="ChestModalTitle">Chest History</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

                <!-- CHEST TABLE -->
                <table class="table">
                  <!-- TABLE HEADER -->
                  <thead>
                    <tr>
                      <th scope="col">Day</th>
                      <th scope="col">Exercise</th>
                      <th scope="col">Weight</th>
                      <th scope="col">Sets</th>
                      <th scope="col">Reps</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% if (rows) { 
                    var buttons = '';
                    var i = 0;
                    rows.forEach(function(item){
                      if (i < 5) { 
                        if(item.muscle == 'Chest'){ 
                          buttons += '<tr><th scope="col">' + item.day + '</th><td>' + 
                                      item.exercise + '</td><td>' + item.weight + '</td><td>' + 
                                      item.sets + '</td><td>' + item.reps + '</td></tr>';
                          i++; 
                        }
                      }
                  }); %>
                  <%- buttons %> 
                  <% } %>
                  </tbody>   
                </table>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Back Modal -->
        <div class="modal fade" id="BackModal" tabindex="-1" role="dialog" aria-labelledby="#BackModalTitle" aria-hidden="true">
