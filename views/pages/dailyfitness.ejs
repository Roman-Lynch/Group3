<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<!DOCTYPE html>
<html>
  <head>
    <title>Today's Fitness Journey</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <button type="submit" class="btn btn-primary button" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Edit previous workouts
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Workouts</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form>
  
                  <div class="mb-3">
                      <label for="Weekday" class="form-label">Workout Date</label>
                  </div>
                  
                  <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select a date
                      </button>

                    </div>
  
                  <div class="mb-3">
                    <label for="Time" class="form-label">Time</label>
                    <input type="time" class="form-control" id="Time">
                  </div>
  
                  <div class="mb-3">
                      <label for="Time" class="form-label">Modality</label>
                  </div>
  
                  <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select One
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">In-Person</a></li>
                        <li><a class="dropdown-item" href="#">Remote</a></li>
                      </ul>
                    </div>
  
                    <div class="mb-3">
                      <label for="Location" class="form-label">Location</label>
                      <input type="Location" class="form-control" id="Location" aria-describedby="LocationHelp">
                    </div>
  
                    <div class="mb-3">
                      <label for="URL" class="form-label">Remote URL</label>
                      <input type="text" pattern="^[A-Z].+" />
  
                      <div id="URL" class="form-text">Enter a Meeting URL (Zoom, MS Teams, etc.).</div>
                    </div>
  
                    <div class="mb-3">
                      <label for="Attendees" class="form-label">Attendees</label>
                      <input type="Attendees" class="form-control" id="Attendees" aria-describedby="AttendeesHelp">
                      <div id="Attendees" class="form-text">Enter the attendees' names separated by commas.</div>
                    </div>
  
                </form>
          </div>
          <div class="modal-footer">
            <button id="submit_button" class="btn btn-secondary" data-bs-dismiss="modal" type="submit">Close</button>
            <button id="submit_button" class="btn btn-primary" type="submit">Create/Update Event</button>
          </div>
        </div>
      </div>
  
     </div>
  
  
    </div>

  </head>

  <body>
    <style type="text/css">
       body {
                background-color:rgba(164, 195, 178);
            }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <b><i><h1>Today</h1></i></b>
    <form action="/fitness" method="POST">
    <div class="card-group">
      <style type="text/css">
        div {
                 background-color:rgba(164, 195, 178);
             }
     </style>
      <div class="card">
        <img src="/resources/muscles.jpg" class="card-img-top" alt="Exercise">
        <div class="card-body">
          <u><h5 class="card-title">Muscle Groups</h5></u>
          <p class="card-text">Log your muscle group(s) worked today:</p>
          
          <div class="dropdown">
              <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" name="muscle">Select a body part
              <span class="caret"></span></button>
              <ul class="dropdown-menu">

                <!-- Button trigger chest modal -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ChestModal">
                    Chest
                  </a>
                </li>

                <!-- Button trigger back modal -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#BackModal">
                    Back
                  </a>
                </li>

                <!-- Button trigger Arms modal -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ArmsModal">
                    Arms
                  </a>
                </li> 
                
                <!-- Button trigger shoulders modal -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#ShouldersModal">
                    Shoulders
                  </a>
                </li> 

                <!-- Button trigger Legs modal -->
                <li><a type="button" class="text-info" data-toggle="modal" data-target="#LegsModal">
                    Legs
                  </a>
                </li> 

              </ul>
            </div>
          <p class="card-text"><small class="text-muted">Updated just now</small></p>
        </div>

      </div>
      <div class="card">
        <img src="https://images.unsplash.com/photo-1620188526357-ff08e03da266?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <u><h5 class="card-title">Exercises</h5></u>
          <p class="card-text">Log your exercises performed today below:</p>

          <table padding-bottom: 30px>
            <tr style="border-bottom:1px solid black">
              <th>Exercise:</th>
            </tr>

            <tr>
              <td> <input type="text" id="exerciseID" class="form-control" name="exercise"> </td>
            </tr>
            
          </table>
          <p class="card-text"><small class="text-muted">Updated just now</small></p>
        </div>
      </div>

      <div class="card">
        <img src="https://images.unsplash.com/photo-1590239926044-4131f5d0654d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1391&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <u><h5 class="card-title">Weight</h5></u>
          <p class="card-text">Log your weight for their respective exercises below:</p>

          <table padding-bottom: 30px>
            <tr style="border-bottom:1px solid black">
              <th>Weight:</th>
            </tr>

            <tr>
              <td> <input type="text" id="weightAmount" class="form-control" name="weight"> </td>
            </tr>
            </table>

            <p class="card-text"><small class="text-muted">Updated just now</small></p>

        </div>
      </div>

      <div class="card">
        <img src="https://images.unsplash.com/photo-1590239926044-4131f5d0654d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1391&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <u><h5 class="card-title">Sets</h5></u>
          <p class="card-text">Log your sets for their respective exercises below:</p>
            
            <table padding-bottom: 30px>
              <tr style="border-bottom:1px solid black">
                <th>Sets:</th>
              </tr>
  
              <tr>
                <td> <input type="text" id="setsrepsAmount" class="form-control" name="sets"> </td>
              </tr>

            </table>

          </div>
        </div>
  
      <div class="card">
        <img src="https://images.unsplash.com/photo-1590239926044-4131f5d0654d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1391&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <u><h5 class="card-title">Reps</h5></u>
          <p class="card-text">Log your reps for their respective sets below:</p>
                  
            <table padding-bottom: 30px>
              <tr style="border-bottom:1px solid black">
                <th>Reps:</th>
              </tr>
        
                <tr>
                  <td> <input type="text" id="setsrepsAmount" class="form-control" name="reps"> </td>
                </tr>
      
            </table>

            <button class = "btn btn-primary" type = "submit" style="background-color:green;"> Add </button>

            <p class="card-text"><small class="text-muted">Updated just now</small></p>

        </div>
      </div>
    </div>
    </form>
</body>
  
</html>

<%- include ('../partials/footer') %>